<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1388DC"
    android:orientation="vertical"
    tools:context="com.example.project.Homepage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/bb" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignStart="@id/imageView"
        android:layout_marginStart="-106dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Log out"
        android:onClick="signOut"
        app:srcCompat="@drawable/signout"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-116dp"
        android:contentDescription="Đổi ngôn ngữ,Change Language"
        android:onClick="changeLanguage"
        app:srcCompat="@drawable/language"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1697A7B5"
        android:layout_below="@+id/imageView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#d84148"
                android:drawableStart="@drawable/personal_profile"
                android:onClick="personalProfile"
                android:text="Hồ sơ cá nhân   "
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#f3992b"
                android:drawableStart="@drawable/map"
                android:onClick="map"
                android:text="bản đồ    "
                android:textAlignment="textEnd"
                android:textColor="#455A64"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#3da99a"
                android:drawableStart="@drawable/communicate"
                android:onClick="communicate"
                android:text="giao tiếp    "
                android:textAlignment="textEnd"
                android:textColor="#0D47A1"
                android:textSize="20dp"
                tools:ignore="HardcodedText,SpUsage" />

            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#9c4ad3"
                android:drawableStart="@drawable/video_call"
                android:onClick="assistanceVideoCall"
                android:text="cuộc gọi khẩn cấp    "
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#cb4d25"
                android:drawableStart="@drawable/calendar"
                android:onClick="calendar"
                android:text="lịch biểu    "
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="1dp"
                android:background="#2ad3bc"
                android:drawableStart="@drawable/contact"
                android:onClick="feedbackForm"
                android:text="liên hệ chúng tôi    "
                android:textAlignment="textEnd"
                android:textColor="#616161"
                android:textSize="20sp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
