<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1388DC"
    android:orientation="vertical"
    tools:context="com.example.project.Homepage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="156dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/bb" />


    <ImageView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/imageView"
        android:layout_marginTop="25dp"
        android:layout_marginRight="-85dp"
        android:contentDescription="Đổi ngôn ngữ,Change Language"
        android:onClick="changeLanguage"
        app:srcCompat="@drawable/language"
        tools:ignore="TouchTargetSizeCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1697A7B5"
        android:layout_below="@+id/imageView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#f3992b"
                android:drawableLeft="@drawable/map"
                android:onClick="map"
                android:text="MAPS   "
                android:textAlignment="textEnd"
                android:textColor="#455A64"
                android:textSize="20dp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#3da99a"
                android:drawableLeft="@drawable/communicate"
                android:onClick="communicate"
                android:text="COMMUNICATION   "
                android:textAlignment="textEnd"
                android:textColor="#0D47A1"
                android:textSize="20dp" />

            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="1dp"
                android:background="#9c4ad3"
                android:drawableLeft="@drawable/video_call"
                android:onClick="assistanceVideoCall"
                android:text="ASSISTANCE   "
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <Button
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="1dp"
                android:background="#2ad3bc"
                android:drawableLeft="@drawable/contact"
                android:onClick="feedbackForm"
                android:text="FEEDBACK   "
                android:textAlignment="textEnd"
                android:textColor="#616161"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
