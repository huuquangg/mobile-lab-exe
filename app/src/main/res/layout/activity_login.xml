<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#1388DC"
    tools:context="com.example.project.Login">

<!--1388DC","1287DA","99C7EA","1289DB","E2EDF3-->
    <ImageView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="Change Language, Đổi ngôn ngữ"
        android:onClick="changeLanguage"
        app:srcCompat="@drawable/language"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:srcCompat="@drawable/a1" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/person"
        android:hint="  Tên đăng nhập"
        android:inputType="text"
        android:textColorHint="#1D1616"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/lock"
        android:hint=" Mật khẩu"
        android:inputType="textPassword"
        android:textColorHint="#1D1616"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:onClick="forgot"
        android:text="Quên mật khẩu?"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#1284b8"
        android:onClick="LogIn"
        android:text="Đăng nhập"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#1284b8"
        android:onClick="signUp"
        android:text="Đăng ký"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/noLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1284b8"
        android:onClick="noLogin"
        android:text="Khách"
        android:textColor="#FFFFFF" />



</LinearLayout>
